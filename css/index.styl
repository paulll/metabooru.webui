color-background = #1c1c1c
color-text = #ffffff

html, body
	width 100%
	height 100%
	margin 0
	padding 0
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	background color-background
	color color-text
	font-family 'JetBrains Mono', Consolas, monospace

.img-wrap
	margin 5px
	width 300px
	height auto	
	min-height 300px
	position relative
	.controls-wrap
		font-size 200%
		position absolute
		top 0
		right 0
		span,a
			color black
			text-decoration none
			opacity 0.3
			cursor pointer
			&:hover
				opacity 0.8
	img
		object-fit contain
		display block
		width 300px
		height auto
	&:hover:before
		z-index 999
		pointer-events none
		content attr(data-tags)
		display block
		position absolute
		background rgba(0,0,0,0.5)
		color white
		white-space wrap
		opacity 0.5
		
	
#image-grid
	display grid
	grid-template-columns repeat(auto-fill, 310px)
	grid-auto-flow row dense
	justify-content center

.part
	padding 1rem

#header-wrap
	display flex
	align-items space-between
	justify-content space-between
	width 100%
	background black

#input-wrap
	flex-grow 1
	padding 0 2rem
	display flex
	align-items center
	justify-content center
	align-self center
	
	input
		width 100%
		font-size 120%
		padding 0.5rem 1rem

#header
	h1 
		padding 0 2rem 
		font-family 'JetBrains Mono', Consolas, monospace

#hi
	position fixed
	top 0
	right 0
	background black
	opacity 0.5
	padding 0.1rem 1rem